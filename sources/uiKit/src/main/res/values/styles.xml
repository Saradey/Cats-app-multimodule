<resources>

    <style name="MyToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">?attr/color_main_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/color_card_background</item>
    </style>

    <style name="MyPopupToolbarStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">?attr/color_card_background</item>
    </style>

    <style name="Image" />

    <style name="CostumeBackground">
        <item name="android:background">?attr/color_card_background</item>
    </style>

    <style name="ColorMainText.LargeText.TextTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ColorMainText.SmallText">
        <item name="android:textSize">@dimen/size_sp_14</item>
    </style>

    <style name="ColorMainText.LargeText">
        <item name="android:textSize">@dimen/size_sp_16</item>
    </style>

    <style name="ColorMainText.LargeText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ColorMainText" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/color_main_text</item>
    </style>


    <style name="ColorTextDescription.LargeTextDescription">
        <item name="android:textSize">@dimen/size_sp_16</item>
    </style>

    <style name="ColorTextDescription.BigTitleButton">
        <item name="android:textSize">@dimen/size_sp_24</item>
    </style>

    <style name="ColorTextDescription" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/color_text_description</item>
    </style>

    <style name="BackgroundClickAndFocusTrue.LinearLayoutButtonWikiStyle">
        <item name="android:elevation">@dimen/size_dp_4</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/background_wiki_button_night</item>
        <item name="android:paddingTop">@dimen/size_dp_4</item>
        <item name="android:paddingBottom">@dimen/size_dp_4</item>
    </style>

    <style name="BackgroundClickAndFocusTrue.BackgroundRipple">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Image.BackgroundBorderlessRipple">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Image.TitleImageBackground">
        <item name="android:outlineProvider">bounds</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:elevation">@dimen/size_dp_2</item>
    </style>

    <style name="BackgroundClickAndFocusTrue">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BackgroundClickAndFocusTrue.HolderCatTheme">
        <item name="android:background">@drawable/background_card_cat</item>
    </style>

    <style name="TextViewSplashScreenStyle">
        <item name="android:textSize">@dimen/size_dp_40</item>
        <item name="android:textColor">@color/orange_title</item>
    </style>

    <style name="ImitationCardView">
        <item name="android:background">?attr/imitation_card_view_background</item>
        <item name="android:elevation">@dimen/size_dp_6</item>
    </style>

    <style name="ImitationCardView.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Costume_Main1ButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/size_sp_20</item>
        <item name="android:backgroundTint">?attr/color_background_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/color_text_button</item>
    </style>

    <style name="ImitationCardView.Clickable.SettingsTextViewStyle">
        <item name="android:layout_marginStart">@dimen/size_dp_16</item>
        <item name="android:layout_marginTop">@dimen/size_dp_8</item>
        <item name="android:layout_marginEnd">@dimen/size_dp_16</item>
        <item name="android:drawablePadding">@dimen/size_dp_16</item>
        <item name="android:padding">@dimen/size_dp_8</item>
        <item name="android:paddingStart">@dimen/size_dp_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Costume_ThemeMaterialAlertDialog_Light" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <item name="colorAccent">@color/orange_title</item>
        <item name="colorPrimary">@color/text_toolbar_title_light</item>
    </style>

    <style name="Costume_ThemeMaterialAlertDialog_Dark" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/color_background_white</item>
    </style>

    <style name="BackgroundClickAndFocusTrue.TranslucentBackground">
        <item name="android:background">@color/color_black_translucent</item>
        <item name="android:alpha">0.5</item>
    </style>
</resources>