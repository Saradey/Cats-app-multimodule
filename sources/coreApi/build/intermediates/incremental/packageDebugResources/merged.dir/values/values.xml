<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string-array name="language_titles">
        <item>Русский</item>
        <item>English</item>
    </string-array>
    <string-array name="themes_titles">
        <item>Light cats</item>
        <item>Dark cats</item>
    </string-array>
    <attr format="color|reference" name="color_all_background"/>
    <attr format="color|reference" name="color_background_button"/>
    <attr format="color|reference" name="color_card_background"/>
    <attr format="color|reference" name="color_main_text"/>
    <attr format="color|reference" name="color_text_button"/>
    <attr format="color|reference" name="color_text_description"/>
    <color name="colorAccent">#03DAC5</color>
    <color name="colorPrimary">#6200EE</color>
    <color name="colorPrimaryDark">#3700B3</color>
    <color name="color_background_black">#000000</color>
    <color name="color_background_white">#ffffff</color>
    <color name="color_dark_grey">#757575</color>
    <color name="color_dark_grey_hint">#66757575</color>
    <color name="color_grey">#B0B0B0</color>
    <color name="color_light_black">#151515</color>
    <color name="color_light_light_navigation_bar">#DCDCDC</color>
    <color name="color_toolbar_background">#BFBFBF</color>
    <color name="orange_title">#FFC850</color>
    <color name="text_toolbar_title_light">#433434</color>
    <color name="white">#ffffff</color>
    <color name="white_hint">#65FFFFFF</color>
    <string name="app_name" translatable="false">CatApp</string>
    <string name="back_pressed_common">Tap again to exit the app</string>
    <string name="description_cat_title">Description: %s</string>
    <string name="description_cat_title_toolbar">Description of the cat</string>
    <string name="language_app_title">Language application</string>
    <string name="language_app_title_en">English</string>
    <string name="language_app_title_ru">Russian</string>
    <string name="life_span_cat_title">Life cycle: %s years</string>
    <string name="message_stub_wall_cat">Oops! Something went wrong :(</string>
    <string name="name_cat_title">The name of the breed: %s</string>
    <string name="origin_cat_title">Origin: %s</string>
    <string name="query_hint_search_cat">Looking for cats</string>
    <string name="settings_light_title">Light cats</string>
    <string name="settings_night_title">Dark cats</string>
    <string name="settings_to_cat_title">The mood of the cat</string>
    <string name="splash_screen_title" translatable="false">Cats App</string>
    <string name="temperament_cat_title">Temperament: %s</string>
    <string name="theme_title_settings">Theme Application</string>
    <string name="title_cancel_dialog_common">Cancel</string>
    <string name="title_cats_stub_not_found">No cats found</string>
    <string name="title_toolbar_search_cat">Find the cat</string>
    <string name="wall_cat_toolbar_title">Wall of cats</string>
    <string name="wall_menu_search_cat">Search by breed</string>
    <string name="wall_menu_settings">Settings</string>
    <string name="weight_cat_title">Weight: %s kg</string>
    <string name="wiki_cat_description_title">Show me Wikipedia</string>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color_background_white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="color_all_background">@color/color_background_white</item>
        <item name="color_main_text">@color/color_light_black</item>
        <item name="color_card_background">@color/white</item>
        <item name="color_text_description">@color/text_toolbar_title_light</item>
        <item name="color_text_button">@color/white</item>
        <item name="color_background_button">@color/orange_title</item>

        <item name="android:navigationBarColor">@color/color_dark_grey</item>
        <item name="android:statusBarColor">@color/color_dark_grey</item>
    </style>
    <style name="BackgroundClickAndFocusTrue">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="BackgroundClickAndFocusTrue.BackgroundBorderlessRipple">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="BackgroundClickAndFocusTrue.BackgroundRipple">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="BackgroundClickAndFocusTrue.LinearLayoutButtonWikiStyle">
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/background_wiki_button</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="ColorMainText" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/color_main_text</item>
    </style>
    <style name="ColorMainText.LargeText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ColorMainText.LargeText.TextTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ColorMainText.SmallText">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ColorTextDescription" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/color_text_description</item>
    </style>
    <style name="ColorTextDescription.BigTitleButton">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="ColorTextDescription.LargeTextDescription">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CostumeBackground">
        <item name="android:background">?attr/color_card_background</item>
    </style>
    <style name="Costume_MaterialButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">?attr/color_background_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/color_text_button</item>
    </style>
    <style name="Costume_ThemeMaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <item name="colorAccent">@color/orange_title</item>
        <item name="colorPrimary">@color/text_toolbar_title_light</item>
    </style>
    <style name="ImageBackground">
        <item name="android:background">@color/color_grey</item>
    </style>
    <style name="ImageBackground.CatAvatar">
        <item name="android:contentDescription">@null</item>
        <item name="android:elevation">2dp</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ImitationCardView">
        <item name="android:background">@drawable/imitation_cardview_background</item>
        <item name="android:elevation">6dp</item>
    </style>
    <style name="ImitationCardView.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="ImitationCardView.Clickable.SettingsTextViewStyle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MyPopupToolbarStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">?attr/color_card_background</item>
    </style>
    <style name="MyToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">?attr/color_main_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/color_card_background</item>
    </style>
    <style name="TextViewSplashScreenStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/orange_title</item>
    </style>
</resources>